{
  "name": "pymonitor",
  "displayName": "pymonitor-vscode",
  "description": "Python execution monitoring and visualization",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "files": [
    "dist/**/*"
  ],
  "activationEvents": [
    "onLanguage:python",
    "workspaceContains:main.db"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pymonitor.checkPython",
        "title": "PyMonitor: Check Python Environment"
      },
      {
        "command": "pymonitor.restartServer",
        "title": "PyMonitor: Restart Web Server"
      },
      {
        "command": "pymonitor.showFunctionDetails",
        "title": "Show Function Details"
      },
      {
        "command": "pymonitor.debugFunction",
        "title": "Debug Python Function"
      },
      {
        "command": "pymonitor.stepOver",
        "title": "PyMonitor: Debug Step Over (Next)"
      },
      {
        "command": "pymonitor.hotswapLine",
        "title": "PyMonitor: Hot Swap Line",
        "icon": {
          "light": "images/commands/lightning.svg",
          "dark": "images/commands/lightning.svg"
        }
      },
      {
        "command": "pymonitor.evaluate",
        "title": "PyMonitor: Evaluate Expression in Debug Context"
      },
      {
        "command": "pymonitor.goToSnapshotState",
        "title": "PyMonitor: Go To Snapshot State"
      },
      {
        "command": "pymonitor.gotoLine",
        "title": "PyMonitor: Go To Line in Debug Session"
      },
      {
        "command": "pymonitor.gotoLineAndLoadState",
        "title": "PyMonitor: Navigate to Line and Load Snapshot State"
      },
      {
        "command": "pymonitor.startLiveRecording",
        "title": "PyMonitor: Start Live Recording"
      },
      {
        "command": "pymonitor.stopLiveRecording",
        "title": "PyMonitor: Stop Live Recording"
      }
    ],
    "codeLens": {
      "language": "python"
    },
    "menus": {
      "debug/toolBar": [
        {
          "command": "pymonitor.hotswapLine",
          "group": "navigation@100",
          "when": "inDebugMode && debugType == python"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  },
  "extensionDependencies": [
    "ms-python.python"
  ],
  "dependencies": {
    "tree-sitter": "^0.22.4",
    "tree-sitter-python": "^0.23.6"
  }
}
